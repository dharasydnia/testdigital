<% if flash[:notice] -%>
  <p class='notice'><%=h flash[:notice] %></p>
<% end %>
   <% if flash[:error] -%>
  <p class='error'><%=h flash[:error] %></p>
<% end %>
<table>
  <tr>
    <td align="right"><%= 'Chapter ' + @chapter.chapter_no.to_s + '.' %></td>
    <td style="padding-left: 10px;"><%= @chapter.title %></td>
  </tr>
  <tr>
    <td colspan="2">
      <%= link_to 'Edit', edit_chapter_path(@chapter) %> |
      <%= link_to 'Back', chapters_path %>
    </td>
  </tr>
</table>